    <div class="container-md">
      <h1>Edit Page </h1>
      <form action="/{{this.id}}?_method=PUT" method="POST">

          <div class="mb-3 mt-100">

            <label for="title">Title:</label>
            <input type="text" id="title" name="title" class="form-control" value="{{this.title}}"/>

            <label for="category">Category:</label>
            <input type="text" id="category" name="category" class="form-control" value="{{this.category}}"/>

            <label for="description">Description:</label>
            <input type="text" id="description" name="description" class="form-control" value="{{this.description}}"/>

            <label for="URL">URL:</label>
            <input type="text" id="url" name="url" class="form-control gap-5" value="{{this.url}}"/>
          
          </div>

          <div class="form-group">
                <label for="code">Enter code here (optional):</label></br>
                <code >{{this.codeblock}}</code>
                {{!-- <textarea name="code" id="code" cols="90" rows="10"></textarea> --}}
          </div>
    
          <input type="submit" class="btn btn-primary" value="Update entry"/>
          <a href="/" class="btn btn-secondary">Cancel</a>
      </form>

    </div>
<h1 class="container">View of: {{this.title}}</h1>

    <div class="container-lg col-md-5">
              <div class="form-group ">

                <label for="category">Category:</label>
                <input type="text" id="category" name="category" class="form-control" value="{{this.category}}"/>

                <label for="description">Description:</label>
                <input type="text" id="description" name="description" class="form-control" value="{{this.description}}" />

                <label for="URL">URL:</label>
                <input type="text" id="url" name="url" class="form-control" value="{{this.url}}"/>

                   <div class="form-group">
                    
                        <label for="code">Enter code here (optional):</label></br>
                        <pre>
                          <code>
                        <textarea name="code" id="code" cols="90" rows="10">{{this.codeblock}}</textarea>
                      </code>
                    </pre>
                  </div>
            </div>
      <a href="/edit/{{this.id}}" class="btn btn-primary">Edit</a>
      <a href="/" class="btn btn-secondary">Home Page</a>
    </div>





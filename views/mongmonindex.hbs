
<body>
    <div class="container-lg" >
        <h1>Solutions for Mongo or Mongoose issues:</h1>

        <a href="/new" class="btn btn-primary " >New Entry:</a>

        <table class="table table-striped table-hover table-bordered align-middle text-center">
            <thead>
                <th scope="col">Category (JS, HTML, CSS, MONGO/Mongoose, Bootstrap, Misc)</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">URL</th>
                <th scope="col">Date Added</th>
            </thead>
            
            <tbody>
                {{#each b}}
                <tr>
                    <td>{{this.category}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td><a href="{{this.url}}" target="_blank">{{this.url}}</a></td>
                    <td><time class="format-date"></time>{{this.createdAt}}</td>
                    

                    <td>
                        <div >
                            <a href="{{this.id}}" class='btn btn-info'>View</a>
                            <a href="/edit/{{this.id}}" class="btn btn-primary">Edit</a>
                            <a href="/{{this.id}}/delete" class="btn btn-danger bi bi-trash2-fill" class="d-inline">Delete</a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        
        </table>

    <a href="/" class="btn btn-secondary">Home Page</a>
    </div>
</body>